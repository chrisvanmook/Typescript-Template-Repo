{
  "name": "typescript-template-repo",
  "version": "0.1.0",
  "description": "Typescript template repository with tools like jest, eslint, prettier",
  "license": "MIT",
  "author": "Chris van Mook",
  "homepage": "",
  "directories": {
    "lib": "es",
    "test": "__tests__"
  },
  "files": [
    "es"
  ],
  "jsnext:main": "./es/index.js",
  "main": "./es/index.js",
  "module": "./es/index.js",
  "scripts": {
    "build": "yarn clean:packages && tsc -p ./tsconfig.build.es2015.json && tsc -p ./tsconfig.build.commonjs.json",
    "build:example": "yarn clean:example && webpack --production",
    "clean:example": "rm -rf dist",
    "clean:packages": "rm -rf es lib",
    "deploy": "yarn build:example && node ./scripts/gh-pages.js",
    "start": "webpack serve",
    "lint": "eslint ./ --ext .ts,.tsx",
    "test": "yarn jest",
    "prepublish": "yarn build"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/eslint": "^7.2.6",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/jest": "^26.0.19",
    "@typescript-eslint/eslint-plugin": "4",
    "@typescript-eslint/parser": "^4.10.0",
    "css-loader": "^5.0.1",
    "eslint": "7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "5.0.0",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^6.0.8",
    "gh-pages": "^3.1.0",
    "html-webpack-plugin": "^4.5.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "jest-cli": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "style-loader": "^2.0.0",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.12",
    "typescript": "^4.1.3",
    "webpack": "^5.11.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    ".*.{ts,tsx}": [
      "eslint",
      "git add"
    ]
  }
}
