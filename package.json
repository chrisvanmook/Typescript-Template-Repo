{
  "name": "typescript-template-repo",
  "version": "0.1.0",
  "description": "Typescript template repository with tools like jest, eslint, prettier",
  "license": "MIT",
  "author": "Chris van Mook",
  "homepage": "",
  "directories": {
    "lib": "es",
    "test": "__tests__"
  },
  "files": [
    "es"
  ],
  "jsnext:main": "./es/index.js",
  "main": "./es/index.js",
  "module": "./es/index.js",
  "scripts": {
    "build": "yarn clean:packages && tsc -p ./tsconfig.build.es2015.json && tsc -p ./tsconfig.build.commonjs.json",
    "build:example": "yarn clean:example && webpack --production",
    "clean:example": "rm -rf dist",
    "clean:packages": "rm -rf es lib",
    "deploy": "yarn build:example && node ./scripts/gh-pages.js",
    "start": "webpack-dev-server",
    "lint": "eslint ./ --ext .ts,.tsx",
    "test": "yarn jest",
    "prepublish": "yarn build"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/eslint": "^6.8.1",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/jest": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "2",
    "@typescript-eslint/parser": "^2.34.0",
    "awesome-typescript-loader": "^5.2.1",
    "css-loader": "^3.5.3",
    "eslint": "6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-config-standard-with-typescript": "^17.0.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "file-loader": "^6.0.0",
    "gh-pages": "^3.0.0",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "jest": "^25.5.4",
    "jest-cli": "^26.0.1",
    "lint-staged": "^10.2.9",
    "prettier": "^2.0.5",
    "style-loader": "^1.2.1",
    "ts-jest": "^25.5.1",
    "typescript": "^3.9.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    ".*.{ts,tsx}": [
      "eslint",
      "git add"
    ]
  }
}
